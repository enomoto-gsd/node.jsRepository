<!DOCTYPE html>
<html lang="ja">

<head>
  <meta charset="UTF-8">
  <!--CSSの読み込み -->
  <%- include("shareParts/loadCSS.ejs") %>
  <title>ユーザー登録</title>
</head>

<body>
  <div class="container">
    <h1 class="title">ユーザー登録</h1>
    <div class="form_area mt-5">
      <!-- flashメッセージ表示領域-->
      <% if(flashMessages.error){ %>
        <div class="alert alert-danger " role="alert">
          <%= flashMessages.error %>
        </div>
      <% } %>


      <form action="/signup" method="post" class="login_area">
        <div class="form-group row mt-5">
          <label class="col-form-label col" for="user_name">氏名</label>
          <div class="col">
            <input id="user_name" class="form-control " type="text" name="user_name" <% if(signup_user_name) {%> value="<%= signup_user_name %>" <% } %>>
          </div>
        </div>

        <div class="form-group row mt-5">
          <label class="col-form-label col" for="mail_address">メールアドレス</label>
          <div class="col">
            <input id="mail_address" class="form-control " type="text" name="mail_address" <% if(signup_mail_address) {%> value="<%= signup_mail_address %>" <% } %>>
          </div>
        </div>

        <div class="form-group row mt-5 ">
          <label class="col-form-label col " for="password">パスワード</label>
          <div class="col">
            <input id="password" class="form-control" type="password" name="password">
          </div>
        </div>

        <div class="mt-5 d-flex justify-content-end ">
          <input type="submit" class="btn btn-primary me-5" form = "return" value="戻る">
          <input type="submit" class="btn btn-primary ms-5" value="登録">
        </div>
      </form>

       <!--　戻るボタンエリア -->
       <form action="/login" method="get" id = "return"></form>
    </div>
  </div>
  <%- include("shareParts/loadScript.ejs") %>
</body>

</html>
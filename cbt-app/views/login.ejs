<!DOCTYPE html>
<html lang="ja">

<head>
  <meta charset="UTF-8">
  <!--CSSの読み込み -->
  <%- include("shareParts/loadCSS.ejs") %>
  <title>ログイン</title>
</head>

<body>
  <div class="container">
    <h1 class="title">ログイン</h1>
    <div class="form_area mt-5">
      <!-- flashメッセージ表示領域-->
      <% if(flashMessages.error){ %>
        <div class="alert alert-danger " role="alert">
          <%= flashMessages.error %>
       </div>
      <% } %>
      

      <form action="/login" method="post" class="login_area">
        <div class="form-group row mt-4">
          <label class="col-form-label col" for="mail_address">メールアドレス</label>
          <div class="col">
            <input id="mail_address" class="form-control " type="text" name="mail_address" <% if(mail_address) {%> value = "<%= mail_address %>" <% } %>>
          </div>
        </div>

        <div class="form-group row mt-5 ">
          <label class="col-form-label col " for="password">パスワード</label>
          <div class="col">
            <input id="password" class="form-control" type="password" name="password">
          </div>
        </div>
        
        <div class="signup_link">
          <a href="./signup_mock.html">アカウントをお持ちでない方はこちら</a>
        </div>
        
        <div class="mt-5">
          <input type="submit" class="btn btn-primary " value="ログイン">
        </div>
      </form>
    </div>
  </div>
  <%- include("shareParts/loadScript.ejs") %>
</body>

</html>
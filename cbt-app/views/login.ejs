<!DOCTYPE html>
<html lang="ja">

<head>
  <meta charset="UTF-8">
  <!--boot strapの読み込み -->
  <link rel="stylesheet" href="./css/bootstrap.min.css">
  <!--　ログイン画面のCSS-->
  <link rel="stylesheet" href="./css/login.css">
  <title>ログイン</title>
</head>

<body>
  <div class="container">
    <h1 class="login_title">ログイン</h1>
    <div class="form_area mt-5">
      
      <!-- flashメッセージ表示領域-->
      <% if(flashMessages.error){ %>
        <div class="alert alert-danger " role="alert">
          <%= flashMessages.error %>
       </div>
      <% } %>

      <form action="/login" method="post" class="login_area">
        <div class="form-group row mt-4">
          <label class="col-form-label col" for="mail_address">メールアドレス</label>
          <div class="col">
            <input id="mail_address" class="form-control " type="text" name="mail_address">
          </div>
        </div>

        <div class="form-group row mt-5 ">
          <label class="col-form-label col " for="password">パスワード</label>
          <div class=" col">
            <input id="password" class="form-control" type="password" name="password">
          </div>
        </div>
        
        <div class="signup_link">
          <a href="./signup_mock.html">アカウントをお持ちでない方はこちら</a>
        </div>
        
        <div class="mt-5">
          <input type="submit" class="btn btn-primary " value="ログイン">
        </div>
      </form>
    </div>
    
  </div>
  <!--jqueryの読み込み -->
  <script src="./javascript/jquery.min.js"></script>
  <!--bootstrap jsの読み込み -->
  <script src="./javascript/bootstrap.min.js"></script>

</body>

</html>